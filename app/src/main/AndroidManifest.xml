<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyectoappcamara">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DynamicColors.Light">
        <activity
            android:name=".Actividades.CapturarNuevoPlaneta"
            android:exported="false" />
        <activity
            android:name=".Actividades.NuevoPlaneta"
            android:exported="false" />
        <activity
            android:name=".Actividades.SeleccionPlaneta"
            android:exported="false" />
        <activity
            android:name=".Actividades.Apod"
            android:exported="false" />
        <activity
            android:name=".Actividades.Planetas"
            android:exported="false" />
        <activity
            android:name=".Actividades.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library android:name="org.apache.http.legacy" />
    </application>

</manifest>